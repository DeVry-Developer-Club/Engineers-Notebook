@using EngineersNotebook.Data.Models
@model IEnumerable<EngineersNotebook.Data.Models.Documentation>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="card ml-2 mr-2">
            <div class="card-header">
                <h3 class="card-title">
                    @item.Title
                </h3>
            </div>
            <div class="card-body">
                <p>@item.Description</p>
            </div>
            <div class="card-footer">
                <small class="text-muted">@item.CreatedByUser.UserName</small>
                <div class="row mt-3 mb-2">
                    @for(int i = 0; i < item.Tags.Count; i++)
                    {
                        string[] classes = { "bg-primary", "bg-secondary", "bg-success", "bg-danger", "bg-dark" };
                        Tag tag = item.Tags[i];
                        <span class="badge @classes[i % classes.Length] text-light">@tag.Name</span>
                    }
                </div>
                
                <form method="post" asp-action="Delete" asp-route-id="@item.Id">
                    <a asp-action="Details" asp-controller="Documentation" asp-route-id="@item.Id" class="btn btn-primary">View</a>
                    <button class="btn btn-danger">Delete</button>
                </form>
                
            </div>
        </div>   
    }
</div>